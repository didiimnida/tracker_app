<div class="container" id="product-with-graph">
		<div class="row">
			<div class="col-sm-5 products_bar">

				<div class="panel panel-danger">
					<div class="panel-heading">
				    	<%= @product.name %>
				  	</div>
				  	<div class="panel-body">
				  		<!-- Local Database Results -->
				  		<a href='http://www.amazon.com'><span class="glyphicon glyphicon-shopping-cart"></a>
				  		<img src="<%=@product.photo_url%>" height="425" width="425">
				  		<small>Category: <%=@product.category%> </small>
				  	</div>
				</div>

			  		
			</div>

			<div class="col-sm-7 products_bar">
				<div id="historicalprice"></div>
			</div>

		</div>

		<div class="row">
			<div class="col-sm-5 products_bar">
				<div class="panel panel-danger">
					<h3>Saved Price: <%=number_to_currency(@product.price)%></h3>
			  		<h3>Desired Price: <%=number_to_currency(@product.desired_price)%></h3>
			  		<h3>Current Price: <%=number_to_currency(@product_api["results"][0]["price"])%></h3>
				</div> 		
			</div>
			<div class="col-sm-7 products_bar">
				<div class="panel panel-danger">
			  		<h3>UPC: <%=@product_api["results"][0]["upc"]%></h3>
			  		<h3>Created At: <%=Time.at(@product_api["results"][0]["created_at"]).utc%></h3>
			  		<h3>Model: <%=@product_api["results"][0]["model"]%></h3>
			  		<h3>Product Category: <%=@product_api["results"][0]["category"]%></h3>
			  		<h3>Description: <%=@product_api["results"][0]["description"]%></h3>
			  		<h3>Features: <%=@product_api["results"][0]["features"]["blob"]%></h3>
			  	</div>
			</div>

		</div>

			
		
</div>